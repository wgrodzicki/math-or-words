<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathOrWords.MathOptionPage">
    <VerticalStackLayout
        Padding="200"
        Spacing="25">
        
        <Label 
            x:Name="EquationLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry
            x:Name="AnswerEntry"
            HorizontalOptions="Center">
        </Entry>

        <Button
            x:Name="SubmitAnswerButton"
            Text="Submit"
            Clicked="OnAnswerSubmitted"
            HorizontalOptions="Center" />
        
        <Label
            x:Name="AnswerLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            x:Name="NextEquationButton"
            Text="Next equation"
            Clicked="OnNextEquationChosen"
            HorizontalOptions="Center" />

        <Label
            x:Name="GameOverLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />  
        

    </VerticalStackLayout>
</ContentPage>